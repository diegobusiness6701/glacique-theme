<style>
  .swiper {
    width: 100%;
    height: 100%;
  }

  .swiper-slide {
    text-align: center;
    font-size: 18px;
    display: flex;
    justify-content: center;
    align-items: center;
  }

  .swiper-slide img {
    display: block;
    width: 100%;
    height: 100%;
    object-fit: cover;
  }
</style>
<div
  class="section-{{ section.id }}-padding swiper features-swiper scroll-trigger animate--fade-in desktop-only"
  id="section-{{ section.id }}"
>
  <h1 class="feature-slide__heading heading desktop-only" style="color: {{ section.settings.heading_color }}">
    {{ section.settings.title }}
  </h1>

  <div class="swiper-wrapper desktop-only">
    {%- for block in section.blocks -%}
      {%- if block.type == 'slide' -%}
        <div class="swiper-slide">
          <img src="{{ block.settings.image | image_url }}">
      {%- if block.settings.product != blank -%}<a href="{{ block.settings.product }}">SHOP NOW</a>{%- endif -%}
          </div>
      {%- endif -%}
    {%- endfor -%}
  </div>

  <div class="swiper-pagination"></div>

  <div
    class="slide__feature-wrapper desktop-only"
  >
    {%- for block in section.blocks -%}
      {% assign modulo = forloop.index | modulo: 2 %}
      {%- if block.type == 'feature' -%}
        <div
          class="slide__feature-item flex flex-column"
          style="gap: 1rem; {%- if modulo == 0 -%} align-items:end; text-align: right; {%- else -%} align-items:start; text-align: left; {%- endif -%}"
        >
          {% render 'icon', icon: block.settings.icon %}
          <span class="slide__feature-item__heading">{{ block.settings.heading }}</span>
          <span class="slide__feature-item__description">{{ block.settings.description }}</span>
        </div>
        {% if modulo == 0 %}
          <div>&nbsp;</div>
        {% endif %}
      {%- endif -%}
    {%- endfor -%}
  </div>
</div>
<div
  class="section-{{ section.id }}-padding swiper features-mobile-swiper scroll-trigger animate--fade-in mobile-only"
  id="section-{{ section.id }}"
  style="height: calc( 100vw / ({{ section.settings.mobile_background.width }} / {{ section.settings.mobile_background.height }})); background-size: contain; background-image: url('{{ section.settings.mobile_background |  image_url  }}')"
>
  <div
    class="swiper-wrapper"
  >
    {%- for block in section.blocks -%}
      {%- if block.type == 'feature' -%}
        <div class="swiper-slide">
          <div
            class="slide__feature-item flex flex-column"
            style="position: absolute; bottom: 50px; gap: 1rem; {%- if modulo == 0 -%} align-items:center; text-align: center; {%- else -%} align-items:center; text-align: center; {%- endif -%}"
          >
            {% render 'icon', icon: block.settings.icon %}
            <span class="slide__feature-item__heading">{{ block.settings.heading }}</span>
            <span class="slide__feature-item__description">{{ block.settings.description }}</span>
          </div>
          
        </div>
      {%- endif -%}
    {%- endfor -%}
  </div>

  <div class="swiper-pagination"></div>
</div>
<script>
  document.addEventListener('DOMContentLoaded', function () {
    var swiper = new Swiper('.features-swiper', {
      grabCursor: true,
      pagination: {
        el: '.swiper-pagination',
        clickable: true,
      },
    });

    var swiper2 = new Swiper('.features-mobile-swiper', {
      grabCursor: true,
      pagination: {
        el: '.swiper-pagination',
        clickable: true,
      },
    });
  });
</script>
{% schema %}
{
  "name": "Feature Carousel",
  "tag": "section",
  "class": "section",
  "disabled_on": {
    "groups": ["header", "footer"]
  },
  "settings": [
    {
      "type": "textarea",
      "id": "title",
      "default": "Featured carousel",
      "label": "t:sections.featured-collection.settings.title.label"
    },
    {
      "type": "color",
      "id": "heading_color",
      "default": "#fff",
      "label": "Heading Color"
    },
    {
      "type": "image_picker",
      "id": "mobile_background",
      "label": "Mobile bakcground"
    },
    {
      "type": "range",
      "id": "padding_top",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "t:sections.all.padding.padding_top",
      "default": 36
    },
    {
      "type": "range",
      "id": "padding_bottom",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "t:sections.all.padding.padding_bottom",
      "default": 36
    }
  ],
  "blocks": [
    {
      "type": "slide",
      "name": "Slide",
      "settings": [
        {
          "type": "image_picker",
          "id": "image",
          "label": "Image"
        },
        {
          "type": "product",
          "id": "product",
          "label": "Product"
        }
      ]
    },
    {
      "type": "feature",
      "name": "Featue",
      "settings": [
        {
          "type": "select",
          "id": "icon",
          "label": "Icon",
          "options": [
            {
              "value": "cucumber",
              "label": "Cucumber"
            },
            {
              "value": "lavender",
              "label": "Lavender"
            },
            {
              "value": "aloe",
              "label": "Aloe"
            },
            {
              "value": "lemon",
              "label": "Lemon"
            },
            {
              "value": "honey",
              "label": "Honey"
            },
            {
              "value": "leaf",
              "label": "Leaf"
            }
          ]
        },
        {
          "type": "text",
          "id": "heading",
          "label": "Heading"
        },
        {
          "type": "textarea",
          "id": "description",
          "label": "Description"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Feature Carousel"
    }
  ]
}
{% endschema %}
