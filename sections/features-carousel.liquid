<style>
  .swiper {
    width: 100%;
    height: 100%;
  }

  .swiper-slide {
    text-align: center;
    font-size: 18px;
    background: #fff;
    display: flex;
    justify-content: center;
    align-items: center;
  }

  .swiper-slide img {
    display: block;
    width: 100%;
    height: 100%;
    object-fit: cover;
  }
</style>
<div
  class="section-{{ section.id }}-padding swiper features-swiper"
  id="section-{{ section.id }}"
>
  <div class="swiper-wrapper">
    {%- for block in section.blocks -%}
      {%- if block.type == 'slide' -%}
        <div class="swiper-slide"><img src="{{ block.settings.image | image_url }}"></div>
      {%- endif -%}
    {%- endfor -%}
  </div>
</div>
{% schema %}
{
  "name": "Features Carousel",
  "tag": "section",
  "class": "section",
  "disabled_on": {
    "groups": ["header", "footer"]
  },
  "settings": [
    {
      "type": "textarea",
      "id": "title",
      "default": "Featured carousel",
      "label": "t:sections.featured-collection.settings.title.label"
    },
    {
      "type": "color",
      "id": "heading_color",
      "default": "#fff",
      "label": "Heading Color"
    },

    {
      "type": "range",
      "id": "padding_top",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "t:sections.all.padding.padding_top",
      "default": 36
    },
    {
      "type": "range",
      "id": "padding_bottom",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "t:sections.all.padding.padding_bottom",
      "default": 36
    }
  ],
  "blocks": [
    {
      "type": "slide",
      "name": "Slide",
      "settings": [
        {
          "type": "image_picker",
          "id": "image",
          "label": "Image"
        }
      ]
    },
    {
      "type": "feature",
      "name": "Featue",
      "settings": [
        {
          "type": "select",
          "id": "icon",
          "label": "Icon",
          "options": [
            {
              "value": "cucumber",
              "label": "Cucumber"
            },
            {
              "value": "lavender",
              "label": "Lavender"
            },
            {
              "value": "aloe",
              "label": "Aloe"
            },
            {
              "value": "lemon",
              "label": "Lemon"
            },
            {
              "value": "honey",
              "label": "Honey"
            },
            {
              "value": "leaf",
              "label": "Leaf"
            }
          ]
        },
        {
          "type": "text",
          "id": "heading",
          "label": "Heading"
        },
        {
          "type": "textarea",
          "id": "description",
          "label": "Description"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "t:sections.featured-collection.presets.name"
    }
  ]
}
{% endschema %}
