<style>
  #section-{{ section.id }} {
    background-image: url('{{ section.settings.background_image | image_url  }}');
  }
</style>
<div
  class="section-{{ section.id }}-padding section-subscription scroll-trigger animate--fade-in"
  id="section-{{ section.id }}"
></div>
{% schema %}
{
  "name": "Subscription block",
  "tag": "section",
  "class": "section",
  "disabled_on": {
    "groups": ["header", "footer"]
  },
  "settings": [
    {
      "type": "image_picker",
      "id": "background_image",
      "label": "Background Image"
    },
    {
      "type": "textarea",
      "id": "title",
      "default": "Subscription block",
      "label": "t:sections.featured-collection.settings.title.label"
    },
    {
      "type": "textarea",
      "id": "description",
      "label": "Description"
    },
    {
      "type": "color",
      "id": "heading_color",
      "default": "#fff",
      "label": "Heading Color"
    },
    {
      "type": "range",
      "id": "padding_top",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "t:sections.all.padding.padding_top",
      "default": 36
    },
    {
      "type": "range",
      "id": "padding_bottom",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "t:sections.all.padding.padding_bottom",
      "default": 36
    }
  ],
  "blocks": [
    {
      "type": "feature",
      "name": "Featue",
      "settings": [
        {
          "type": "select",
          "id": "icon",
          "label": "Icon",
          "options": [
            {
              "value": "box-cancel",
              "label": "Box Cancel"
            },
            {
              "value": "pinned-deals",
              "label": "Pinned Deals"
            },
            {
              "value": "delivery",
              "label": "Delivery"
            },
            {
              "value": "save-money",
              "label": "Save Money"
            }
          ]
        },
        {
          "type": "textarea",
          "id": "description",
          "label": "Description"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Subscription block"
    }
  ]
}
{% endschema %}
