{{ 'component-accordion.css' | asset_url | stylesheet_tag }}
<style>
  #section-{{ section.id }} {
      padding-top: {{ section.settings.padding_top }}px;
      padding-bottom: {{ section.settings.padding_bottom }}px;
      --faq-wrapper-width: max(calc(100vw - 800px), 1200px);
      /* min-width: var(--faq-wrapper-width);
      max-width: var(--faq-wrapper-width); */
      padding-left: calc((100% - var(--faq-wrapper-width)) / 2);
      padding-right: calc((100% - var(--faq-wrapper-width)) / 2);
      background: #D7F1F6;
  }
</style>
<div
  class="section-{{ section.id }}-padding section-our-story scroll-trigger animate--fade-in"
  id="section-{{ section.id }}"
>
  <h1 class="heading" style="color: {{ section.settings.heading_color }}">{{ section.settings.title }}</h1>
  {%- for block in section.blocks -%}
    <div class="product__accordion accordion quick-add-hidden" {{ block.shopify_attributes }}>
      <details id="Details-{{ block.id }}-{{ section.id }}">
        <summary class="faq__title">
          <div class="summary__title">
            <h2 class="h4 accordion__title inline-richtext">
              {{ block.settings.heading | default: block.settings.heading | escape }}
            </h2>
          </div>
          <span class="icon-collapse"></span>
          {% comment %} {% render 'icon-caret' %} {% endcomment %}
        </summary>
        <div class="accordion__content rte" id="ProductAccordion-{{ block.id }}-{{ section.id }}">
          {{ block.settings.description }}
        </div>
      </details>
    </div>
  {%- endfor -%}
</div>
{% schema %}
{
  "name": "FAQ",
  "tag": "section",
  "class": "section",
  "disabled_on": {
    "groups": ["header", "footer"]
  },
  "settings": [
    {
      "type": "textarea",
      "id": "title",
      "default": "Our Story",
      "label": "t:sections.featured-collection.settings.title.label"
    },
    {
      "type": "color",
      "id": "heading_color",
      "default": "#fff",
      "label": "Heading Color"
    },
    {
      "type": "color",
      "id": "background",
      "default": "#D7F1F6",
      "label": "Heading Color"
    },
    {
      "type": "range",
      "id": "padding_top",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "t:sections.all.padding.padding_top",
      "default": 36
    },
    {
      "type": "range",
      "id": "padding_bottom",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "t:sections.all.padding.padding_bottom",
      "default": 36
    }
  ],
  "blocks": [
    {
      "type": "faq-item",
      "name": "Faq Item",
      "settings": [
        {
          "type": "textarea",
          "id": "heading",
          "label": "Heading"
        },
        {
          "type": "textarea",
          "id": "description",
          "label": "Description"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "FAQ"
    }
  ]
}
{% endschema %}
