<style>
  #section-{{ section.id }} {
    display: block;
    height: calc(100vw / ({{ section.settings.background_image.width }} / {{ section.settings.background_image.height }}));
    background-image: url('{{ section.settings.background_image | image_url  }}');
    background-size: contain;
    background-repeat: no-repeat;
    position: relative;
  }

  #section-{{ section.id }} .heading {
    color: {{ section.settings.heading_color }};
    text-align: left;
    padding-left: 100px;
    position: absolute;
    top: 250px;
    z-index: 10;
  }
  #section-{{ section.id }} .our-story-swiper {
    max-width: 40%;
    max-height: 250px;
    position: absolute;
    left: 100px;
    bottom: 20%;
  }
  #section-{{ section.id }} .swiper-slide {
    background: none;
    color: #fff;

  }
</style>
<div
  class="section-{{ section.id }}-padding section-our-story scroll-trigger animate--fade-in"
  id="section-{{ section.id }}"
>
  <h1 class="heading">{{ section.settings.title }}</h1>
  <div class="swiper our-story-swiper">
    <div class="swiper-wrapper">
      {%- for block in section.blocks -%}
        {%- if block.type == 'story' -%}
          <div class="swiper-slide description">{{ block.settings.description }}</div>
        {%- endif -%}
      {%- endfor -%}
    </div>
    <div class="swiper-pagination"></div>
  </div>
</div>
<script>
  document.addEventListener('DOMContentLoaded', function () {
    var swiper = new Swiper('.our-story-swiper', {
      grabCursor: true,
      pagination: {
        el: '.swiper-pagination',
        clickable: true,
      },
    });
  });
</script>
{% schema %}
{
  "name": "Our Story",
  "tag": "section",
  "class": "section",
  "disabled_on": {
    "groups": ["header", "footer"]
  },
  "settings": [
    {
      "type": "image_picker",
      "id": "background_image",
      "label": "Background Image"
    },
    {
      "type": "textarea",
      "id": "title",
      "default": "Our Story",
      "label": "t:sections.featured-collection.settings.title.label"
    },
    {
      "type": "color",
      "id": "heading_color",
      "default": "#fff",
      "label": "Heading Color"
    },
    {
      "type": "range",
      "id": "padding_top",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "t:sections.all.padding.padding_top",
      "default": 36
    },
    {
      "type": "range",
      "id": "padding_bottom",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "t:sections.all.padding.padding_bottom",
      "default": 36
    }
  ],
  "blocks": [
    {
      "type": "story",
      "name": "Story",
      "settings": [
        {
          "type": "textarea",
          "id": "description",
          "label": "Description"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Our Story"
    }
  ]
}
{% endschema %}
