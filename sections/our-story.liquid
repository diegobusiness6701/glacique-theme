<style>
  #section-{{ section.id }} {
    display: block;
    height: calc(100vw / ({{ section.settings.background_image.width }} / {{ section.settings.background_image.height }}));
    background-image: url('{{ section.settings.background_image | image_url  }}');
    background-size: contain;
    background-repeat: no-repeat;
  }
</style>
<div
  class="section-{{ section.id }}-padding section-our-story scroll-trigger animate--fade-in"
  id="section-{{ section.id }}"
></div>
{% schema %}
{
  "name": "Our Story",
  "tag": "section",
  "class": "section",
  "disabled_on": {
    "groups": ["header", "footer"]
  },
  "settings": [
    {
      "type": "image_picker",
      "id": "background_image",
      "label": "Background Image"
    },
    {
      "type": "textarea",
      "id": "title",
      "default": "Subscription block",
      "label": "t:sections.featured-collection.settings.title.label"
    },
    {
      "type": "color",
      "id": "heading_color",
      "default": "#fff",
      "label": "Heading Color"
    },
    {
      "type": "range",
      "id": "padding_top",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "t:sections.all.padding.padding_top",
      "default": 36
    },
    {
      "type": "range",
      "id": "padding_bottom",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "t:sections.all.padding.padding_bottom",
      "default": 36
    }
  ],
  "blocks": [
    {
      "type": "story",
      "name": "Story",
      "settings": [
        {
          "type": "textarea",
          "id": "description",
          "label": "Description"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Our Story"
    }
  ]
}
{% endschema %}